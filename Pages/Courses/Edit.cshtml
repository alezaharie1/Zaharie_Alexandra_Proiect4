@page
@model Zaharie_Alexandra_Proiect4.Pages.Courses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Course.ID" />
            <div class="form-group">
                <label asp-for="Course.Name" class="control-label"></label>
                <input asp-for="Course.Name" class="form-control" />
                <span asp-validation-for="Course.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Description" class="control-label"></label>
                <input asp-for="Course.Description" class="form-control" />
                <span asp-validation-for="Course.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.Credits" class="control-label"></label>
                <input asp-for="Course.Credits" class="form-control" />
                <span asp-validation-for="Course.Credits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.StartDate" class="control-label"></label>
                <input asp-for="Course.StartDate" class="form-control" />
                <span asp-validation-for="Course.StartDate" class="textdanger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.MentorID" class="control-label">Mentor Name</label>
                <select asp-for="Course.MentorID" class="form-control" asp-items="ViewBag.MentorID">
                </select>
                <span asp-validation-for="Course.MentorID" class="text-danger"></span>
            </div>
            <div class="form-group">
 <div class="table">
 <table>
 <tr>
 @{
 int cnt = 0;
 foreach (var dep in Model.AssignedDepartmentDataList)
 {
 if (cnt++ % 3 == 0)
{
@:</tr><tr>
}
@:<td>
 <input type="checkbox"
 name="selectedDepartments"
value="@dep.DepartmentID"
@(Html.Raw(dep.Assigned ?
"checked=\"checked\"" : "")) />
 @dep.DepartmentID @: @dep.Name
 @:</td>
 }
 @:</tr>
 }
 </table>
 </div>
 </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
